{
  "productName": "ForgeAI Companion",
  "version": "1.1.0",
  "identifier": "ai.forge.companion",
  "build": {
    "beforeDevCommand": "pnpm dev:vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build:vite",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "ForgeAI Companion",
        "width": 380,
        "height": 620,
        "resizable": false,
        "decorations": false,
        "transparent": false,
        "alwaysOnTop": false,
        "visible": true,
        "skipTaskbar": false,
        "center": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/tray-icon.png",
      "iconAsTemplate": false,
      "tooltip": "ForgeAI Companion"
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' wss://* ws://* https://* http://*; img-src 'self' data: http://* https://*; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "nsis": {
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "languages": ["English", "PortugueseBR"]
      }
    }
  }
}
